@model LoginViewModel
@{
    ViewData["Title"] = "Log in";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- End Required meta tags -->
    <!-- Begin SEO tag -->
    <title>AuthorizationServer</title>
    <meta property="og:title" content="Starter Template">
    <meta name="author" content="Beni Arisandi">
    <meta property="og:locale" content="en_US">
    <meta name="description" content="Responsive admin theme build on top of Bootstrap 4">
    <meta property="og:description" content="Responsive admin theme build on top of Bootstrap 4">
    <link rel="canonical" href="index.html">
    <meta property="og:url" content="index.html">
    <meta property="og:site_name" content="Looper - Bootstrap 4 Admin Theme">
    <!-- End SEO tag -->
    <!-- FAVICONS -->
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="~/Content/assets/apple-touch-icon.png">
    <link rel="shortcut icon" href="~/Content/assets/favicon.ico">
    <meta name="theme-color" content="#3063A0">
    <!-- End FAVICONS -->
    <script src="~/Content/assets/vendor/pace/pace.min.js"></script>
    <!-- BEGIN BASE STYLES -->
    <link rel="stylesheet" href="~/Content/assets/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendor/fontawesome/css/fontawesome.all.css">
    <!-- END BASE STYLES -->
    <!-- BEGIN THEME STYLES -->
    <link rel="stylesheet" href="~/Content/assets/stylesheets/main.min.css">
    <link rel="stylesheet" href="~/Content/assets/stylesheets/custom.css">
    <!-- END THEME STYLES -->
</head>
<body>
    <!-- .auth -->
    <main class="auth">
        <header id="auth-header" class="auth-header" style="background-image: url(/Content/assets/images/illustration/img-1.png);">
            <h1>
                <img src="~/Content/assets/images/brand-inverse.png" alt="" height="72">
                <span class="sr-only">Sign In</span>
            </h1>
            <p>
                Don't have a account?
                <a href="@Url.Action("Register","Account", new {returnUrl = ViewData["ReturnUrl"]})">Register</a>
            </p>
        </header>
        <!-- form -->
        <form action="@Url.Action("Login","Account", new {returnUrl = ViewData["ReturnUrl"]})" method="post" class="auth-form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <!-- .form-group -->
            <div class="form-group">
                <div class="form-label-group">
                    <input type="text" name="Username" class="form-control" placeholder="Username" required="" autofocus="">
                    <label>Username</label>
                </div>
            </div>
            <!-- /.form-group -->
            <!-- .form-group -->
            <div class="form-group">
                <div class="form-label-group">
                    <input type="password" name="Password" class="form-control" placeholder="Password" required="">
                    <label>Password</label>
                </div>
            </div>
            <!-- .form-group -->
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign In</button>
            </div>
            <!-- /.form-group -->
            <!-- /.form-group -->
            <!-- .form-group -->
            <div class="form-group text-center">
                <div class="custom-control custom-control-inline custom-checkbox">
                    <input asp-for="RememberMe" class="custom-control-input">
                    <label class="custom-control-label" asp-for="RememberMe">Keep me sign in</label>
                </div>
            </div>
            <!-- /.form-group -->
            <!-- recovery links -->
            <div class="text-center pt-3">
                <a href="@Url.Action("ForgotPassword","Account")" class="link">Forgot your password?</a>
                <span class="mx-2">·</span>
                <a href="@Url.Action("Register","Account", new { ReturnUrl = ViewBag.ReturnUrl })">Register as a new user?</a>
            </div>
            <!-- /recovery links -->
        </form>
        <!-- /.auth-form -->
        <!-- copyright -->
        <footer class="auth-footer">
            © 2018 All Rights Reserved.
            <a href="#">Privacy</a> and
            <a href="#">Terms</a>
        </footer>
    </main>
    <!-- /.auth -->
    <!-- BEGIN PLUGINS JS -->
    <script src="~/Content/assets/vendor/particles.js/particles.min.js"></script>
    <script>
      particlesJS.load('auth-header', '/Content/assets/javascript/particles.json');
    </script>
    <!-- END PLUGINS JS -->
</body>

</html>
