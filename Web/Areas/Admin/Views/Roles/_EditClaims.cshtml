@using Web.Helpers
@model Web.Controllers.RoleClaimsViewModel
@using Shared.Models

<form action="@Url.Action("EditClaims","Roles")" method="post" role="form" class="form-horizontal">
    @Html.Partial("_ModalHeader", new ModalHeader { Heading = "Update Role Claims" })
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.HiddenFor(m => m.RoleId)
                    <label class="col-sm-2 control-label">Role name:</label>
                    <div class="col-sm-10">
                        @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="col-sm-12">
                @foreach (var claimGroup in Model.ClaimGroups)
                {
                    <div class="line line-dashed b-b line-lg pull-in"></div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">@claimGroup.GroupName</label>
                        <div class="col-sm-10">
                            @for (var i = 0; i < claimGroup.GroupClaimsCheckboxes.Count(); i++)
                            {
                                <label class="checkbox-inline">
                                    <input type="checkbox" name="SelectedClaims" value="@claimGroup.GroupClaimsCheckboxes[i].Value" checked="@claimGroup.GroupClaimsCheckboxes[i].Selected"> @claimGroup.GroupClaimsCheckboxes[i].Text
                                </label>
                            }
                        </div>
                    </div>
                }
            </div>


        </div>
    </div>
    @Html.Partial("_ModalFooter", new ModalFooter { })
</form>
<script>
    $("form").submit(function (event) {
        event.preventDefault();
        let url = $("form").attr('action');
        let data = $("form").serialize();
        $.when(sys.CallAjax(url, data))
            .done(function (response) {
                $('#modal-action').modal('hide');
                sys.Alert(response.status, response.message);
                $('table').DataTable().ajax.reload(null, false);
            })
            .fail(function (error) {
                sys.Alert(false, "Có lỗi xảy ra, vui lòng thử lại!");
            });
    });
</script>
