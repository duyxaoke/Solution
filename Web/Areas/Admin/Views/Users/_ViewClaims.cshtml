@using Web.Helpers
@model Web.Controllers.UserClaimsViewModel
@using Shared.Models

@Html.Partial("_ModalHeader", new ModalHeader { Heading = "Xem phân quyền hiện tại" })
<div class="panel-body">
    <div class="row">
        <div class="col-sm-12">
            <p>Username: @Model.UserName</p>
        </div>

        <div class="col-sm-12">
            @foreach (var claimGroup in Model.ClaimGroups)
        {
            <div class="line line-dashed b-b line-lg pull-in"></div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@claimGroup.GroupName</label>
                <div class="col-sm-10">
                    @for (var i = 0; i < claimGroup.GroupClaimsCheckboxes.Count(); i++)
                {
                    <label class="checkbox-inline">
                        <input type="checkbox" name="SelectedClaims" value="@claimGroup.GroupClaimsCheckboxes[i].Value" checked="@claimGroup.GroupClaimsCheckboxes[i].Selected"> @claimGroup.GroupClaimsCheckboxes[i].Text
                    </label>
            }
                </div>
            </div>
    }
        </div>
    </div>
</div>
@Html.Partial("_ModalFooter", new ModalFooter { })
